// server/server.js
// Venus Auth Server - basic secure starter

const express = require('express');
const cors = require('cors');
require('dotenv').config();

// Create the app instance
const app = express();

// Use a safe default port if none in .env
const PORT = process.env.PORT || 4000;

// --- Middleware ---

// Allow requests from your frontend (you can lock this down later)
app.use(cors());

// Parse JSON request bodies
app.use(express.json());

// --- Health check route ---
// This is just to verify the server is running.
app.get('/', (req, res) => {
  res.json({
    status: 'ok',
    app: 'Venus Auth Server',
    message: 'Server is running âœ…'
  });
});

// --- Start listening ---
app.listen(PORT, () => {
  console.log(`Venus auth server listening on http://localhost:${PORT}`);
});

